{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-start.sh"
          }
        ]
      }
    ],
    "PreToolUse": {
      "Write": [
        {
          "hooks": [
            {
              "type": "command",
              "command": ".claude/hooks/pre-write-secret-scan.sh",
              "args": ["{{new_string}}", "{{file_path}}"]
            }
          ]
        }
      ],
      "Edit": [
        {
          "hooks": [
            {
              "type": "command",
              "command": ".claude/hooks/pre-write-secret-scan.sh",
              "args": ["{{new_string}}", "{{file_path}}"]
            }
          ]
        }
      ]
    },
    "PostToolUse": {
      "Edit": [
        {
          "hooks": [
            {
              "type": "command",
              "command": ".claude/hooks/post-edit-check.sh",
              "args": ["{{file_path}}"]
            }
          ]
        }
      ]
    }
  }
}
